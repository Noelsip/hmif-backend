{
  "name": "hmif-app-backend",
  "version": "1.0.0",
  "description": "HMIF App Backend API",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "migrate": "npx prisma migrate deploy",
    "generate": "npx prisma generate",
    "seed": "node prisma/seed.js",
    "test": "jest",
    "docker:env": "node docker-auto-env.js",
    "docker:build": "npm run docker:env && docker compose build",
    "docker:up": "npm run docker:env && docker compose up -d",
    "docker:deploy": "npm run docker:env && docker compose down && docker compose up --build -d",
    "docker:logs": "docker compose logs -f app",
    "docker:stop": "docker compose down",
    "build": "npm run generate && npm run migrate",
    "prod": "pm2 start ecosystem.config.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "latest",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-session": "^1.17.3",
    "express-validator": "^6.15.0",
    "helmet": "^7.0.0",
    "imagekit": "^4.1.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "redis": "^4.6.7",
    "sanitize-html": "^2.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "prisma": "latest",
    "supertest": "^6.3.3"
  }
}
